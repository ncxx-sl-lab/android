<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape android:shape="rectangle">
      <corners
        android:radius="5dip" />
      <gradient
        android:angle="90"
        android:startColor="#333399"
        android:endColor="#ffffff" />
      <padding
        android:left="25dip"
        android:top="10dip"
        android:right="25dip"
        android:bottom="15dip" />
      <stroke
        android:width="1dip"
        android:color="#000033" />
    </shape>
  </item>
  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <corners
        android:radius="5dip" />
      <gradient
        android:angle="90"
        android:startColor="#666699"
        android:endColor="#ffffff"
        />
      <padding
        android:left="25dip"
        android:top="10dip"
        android:right="25dip"
        android:bottom="15dip" />
      <stroke
        android:width="1dip"
        android:color="#000033" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <corners
        android:radius="5dip" />
      <gradient
        android:angle="90"
        android:startColor="#666666"
        android:endColor="#ffffff" />
      <padding
        android:left="25dip"
        android:top="10dip"
        android:right="25dip"
        android:bottom="15dip" />
      <stroke
        android:width="1dip"
        android:color="#000033" />
    </shape>
  </item>
</selector>