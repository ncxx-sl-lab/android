<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
>

	<TextView
    	android:text="依頼内容を入力してください。"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	/>

	<ScrollView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:fadingEdgeLength="100dp"
    	android:layout_weight="1"
	>


    	<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	>

    	<TableLayout
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent">

    		<TableRow
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

				<ImageView
					android:src="@drawable/icon"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_width="match_parent" android:id="@+id/requestInput_MaterialImage">
				</ImageView>
    		</TableRow>

			<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

	        	<TextView
	                android:id="@+id/companyNameLabel"
	                android:text="依頼内容"
	                android:textSize="19dip"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />

	    	</TableRow>

			<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

	        	<TextView
	                android:id="@+id/companyNameLabel"
	                android:text=" "
	                android:textSize="19dip"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />

	    	</TableRow>

			<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

				<TextView
	            	android:id="@+id/organizationNameLabel"
	                android:text="申請先"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            <LinearLayout>


	            <TextView
	                android:text="管理者ＸＸ"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:id="@+id/requestInput_TextView2"/>
				<Button
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_weight="1"
					android:text="申請先選択" android:id="@+id/requestInput_SelectButton"></Button>


        		</LinearLayout>

	    	</TableRow>


	    	<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

	            <TextView
	        		android:id="@+id/organizationNameLabel"
	                android:text="品目"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            <TextView
	                android:text="通知品目１"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:id="@+id/requestInput_TextView5"/>

	    	</TableRow>

	    	<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

	            <TextView
	        		android:id="@+id/organizationNameLabel"
	                android:text="単価"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            <TextView
	                android:text="7,400円"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:id="@+id/requestInput_TextView4"/>

	    	</TableRow>

	    	<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

	            <TextView
	        		android:id="@+id/organizationNameLabel"
	                android:text="購入店舗"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            <TextView
	                android:text="テスト商店"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:id="@+id/requestInput_TextView3"/>

	    	</TableRow>





	    	<TableRow
       	 		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">

	            <TextView
	        		android:id="@+id/organizationNameLabel"
	                android:text="数量"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            <EditText
	                android:id="@+id/positionNameLabel"
	                android:text=""
	                android:textSize="10dip"
	                android:hint="数量を入力"
	                android:layout_marginLeft="5dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            <TextView
	        		android:id="@+id/organizationNameLabel"
	                android:text="(在庫数：4）"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />

	    	</TableRow>






    		<TableRow
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content">
	            <TextView
	                android:id="@+id/positionNameLabel"
	                android:text=" "
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	    	</TableRow>



       	</TableLayout>
	            <TextView
	        		android:text="通知コメント"
	                android:layout_marginLeft="10dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:id="@+id/requestInput_TextView1"/>

		        <EditText
        	        android:id="@+id/personNameText"
        	        android:textSize="10dip"
            	    android:hint="コメントがあれば記載してください。"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content" />
        </LinearLayout>

	</ScrollView>

    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="match_parent" android:orientation="horizontal">
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:text="@string/confirm" android:id="@+id/requestInput_ConfirmButton"></Button>
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:text="@string/stop" android:id="@+id/requestInput_StopButton"></Button>
    </LinearLayout>

</LinearLayout>