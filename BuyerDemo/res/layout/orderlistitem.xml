<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" android:orientation="horizontal" >
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="3pt" android:layout_marginTop="3pt" >
        <TextView android:layout_height="fill_parent" android:id="@+id/orderListItem_material" android:layout_weight="1" android:text="品目" android:layout_width="fill_parent" android:textSize="10pt" android:layout_gravity="center_vertical" ></TextView>
        <TextView android:layout_height="wrap_content" android:id="@+id/orderListItem_date" android:text="date" android:layout_width="wrap_content" android:textSize="10pt" android:layout_gravity="center_vertical" android:layout_marginLeft="5px" android:layout_marginRight="5px" ></TextView>
        <TextView android:layout_height="wrap_content" android:id="@+id/orderListItem_status" android:text="status" android:layout_width="wrap_content" android:textSize="10pt" android:layout_gravity="center_vertical" android:layout_marginLeft="5px" android:layout_marginRight="5px" ></TextView>
    </LinearLayout> 
</LinearLayout>
