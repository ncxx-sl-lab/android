<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" 
		android:layout_marginTop="16px"
		android:layout_marginBottom="16px"
		android:id="@+id/linearLayout1"
		>
		<TextView 
			android:id="@+id/projectinfo_pjno" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:text="PJ番号" 
			android:width="95px" 
			android:layout_weight="3"
			/>
		<TextView 
			android:id="@+id/projectinfo_workcd" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:text="作業コード" 
			android:width="45px"
			android:layout_weight="2"
			/>
		<TextView 
			android:id="@+id/projectinfo_basictime" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:text="定時" 
			android:width="35px" 
			android:layout_weight="1"
			/>
		<TextView 
			android:id="@+id/projectinfo_zangyoutime" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:text="残業" 
			android:width="35px" 
			android:layout_weight="1"
			/>
		<TextView 
			android:id="@+id/projectinfo_shinyatime" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:text="深夜" 
			android:width="35px" 
			android:layout_weight="1"
			/>
	</LinearLayout>
</LinearLayout>